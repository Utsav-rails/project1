<center>
  <%= form_for @animal do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, class: :"form-control" %>
    <br>
    <%= form.label :image %>
    <%= form.file_field :image, onchange: "validateFiles(this);", data: { max_file_size: 50.kilobyte } %>
    <br>
    <%= form.submit class: :"btn btn-outline-success" %>
  <% end %>
  <%= link_to 'Back', animals_path %>
</center>