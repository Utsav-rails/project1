<center>

<%= search_form_for @search do |form| %>
  <div class="field">
    <%= form.label :name_cont, "State Name" %>
    <%= form.text_field :name_cont %>
  </div>
  <div class="action">
    <%= form.submit "search" %>
  </div>
<% end %>

<h1><td>States</td></h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Taluka</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th> 
    </tr>
  </thead>
  <tbody>
    <% @states.each do |state|%>
      <tr>
        <td><%= link_to "(#{state.id}) #{state.name}", state_path(state.id), method: :get %></td> 
        <td><%= link_to "(#{state.taluka_id}) ", state_path(state.id), method: :get %></td> 

        <td><%= link_to 'Edit', edit_state_path(state.id), method: :get, class: :"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Delete', delete_state_path(state.id), method: :delete, class: :"btn btn-outline-danger" %></td>
        </tr>  
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New State', new_state_path %>